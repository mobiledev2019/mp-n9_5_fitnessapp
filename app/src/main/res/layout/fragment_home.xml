<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/positive_total"
    tools:context=".fragment.HomeFragment">

    <android.support.v7.widget.Toolbar
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:background="@color/positive_total"
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_total"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="7"
                android:textSize="@dimen/toolbartext"
                android:textColor="@color/title_text_total"
                android:text="@string/home"
                android:textStyle="normal"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/ideal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/positive_total"
                android:src="@drawable/idea_24px" />

            <ImageButton
                android:id="@+id/personal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/positive_total"
                android:src="@drawable/user_25px" />

            <ImageButton
                android:id="@+id/more"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/positive_total"
                android:src="@drawable/menu_2_24px" />

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

</RelativeLayout>